{
  "compilerOptions": {
    "baseUrl": "./",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "CommonJS",
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./.nest",
    "paths": {
      "@/*": [
        "./modules/*"
      ]
    },
    "strict": true,
    "target": "ES2019"
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "./.nest",
    "./coverage",
    "./node_modules",
    "./security"
  ]
}
